<div class="cont">
        <div class="tabs">
        <ul class="tabs-menu">
            <li class="tab1">
                <%= link_to '更新日順', folders_path, class: "nav-link" %>
            </li>
            <li class="tab2Active">
                いいね順
            </li>
            <li class="tab3">
                <%= link_to '投稿数順', lotsPost_folders_path, class: "nav-link" %>
            </li>
            <li class="tab4">
                <%= link_to '検索', search_folders_path, class: "nav-link" %>
            </li>
        </ul>

        <div>

            <div class="folder jscroll">
                <div class="folderFlex">
                    <% @likefolder.each do |favorite| %>

                    <div class="folderCard">
                        <div class="folderIm">
                            <% @photo = favorite.folder.photos.last %>
                            <% if @photo.nil? %>
                            <%= image_tag("no-image.png", class: "folderThumbnail image-gallery__item", alt: "noimage") %>
                            <% else %>
                            <%= image_tag(@photo.image.url, class: "folderThumbnail image-gallery__item", alt: "image") %>
                            <% end %>


                            <p id="folderBadge" class="badge badge-secondary">☆<%= favorite.folder.addlikes.count %></p>
                        </div>
                        <div id="folderInformation" class="wrap">


                            <h4 class="folderData"><%= link_to favorite.folder.title, favorite.folder, class:"folTitle" %></h4>
                            <h6 class="folderData fontF">投稿者:<%= link_to favorite.folder.user.name, user_path(favorite.folder.user) %></h6>
                            <% if @photo.nil? %>
                            <% else %>
                            <p class="fontF">最終更新日<br><%= @photo.updated_at.strftime('%Y/%m/%d') %></p>
                            <% end %>
                        </div>
                    </div>


                    <% end %>
                </div>
               <%= paginate @likefolder, class:"pageNate" %>
            </div>

        </div>

        </div>
    </div>
    </div>
